@code {

     List<Attributes> attributesList;
     string searchQuery = string.Empty;
     Attributes attributes = new Attributes();

    protected override async Task OnInitializedAsync()
    {
        attributesList = await AttributeSVE.GetAll();
    }

    protected async Task OnSearch()
    {
        attributesList = await AttributeSVE.Search(searchQuery);  // Thực hiện tìm kiếm với từ khóa
    }

    protected async Task EditAttribute(long id)
    {
        nav.NavigateTo($"/admin/attribute/edit/{id}");  // Điều hướng đến trang chỉnh sửa
    }

    protected async Task DeleteAttribute(long id)
    {
            await AttributeSVE.Delete(id);
            attributesList = await AttributeSVE.GetAll();
    }
}

<style>
    .action-buttons {
        display: none; /* Ẩn các nút hành động mặc định */
        font-size: 0.675rem; /* Kích thước chữ nhỏ hơn, 0.875rem tương đương với 14px */
    }

    .post-row:hover .action-buttons {
        display: inline; /* Hiển thị các nút khi hover vào hàng */
    }

    .post-row {
        position: relative; /* Cần để các nút hành động được hiển thị chính xác */
    }
</style>
