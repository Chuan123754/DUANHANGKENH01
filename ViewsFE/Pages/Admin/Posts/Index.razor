@page "/admin/posts"
@inject NavigationManager Navigation
@inject IPostService PostService
@inject IJSRuntime JS 

<h1>Danh sách bài viết</h1>

<p>
    <button class="btn btn-primary" @onclick="CreatePost">Thêm bài viết</button>
</p>

<!-- Form tìm kiếm -->
<div class="row mb-3">
    <div class="col-md-6">
        <input type="text" @bind="searchKeyword" class="form-control" placeholder="Nhập từ khóa tìm kiếm" />
    </div>
    <div class="col-md-2">
        <button class="btn btn-primary" @onclick="SearchPosts">Tìm kiếm</button>
    </div>
</div>

<!-- Bảng danh sách bài viết -->
<table class="table table-striped">
    <thead>
        <tr>
            <th style="width: 5%;">ID</th>
            <th style="width: 25%;">Tiêu đề</th>
            <th style="width: 10%;">Tác giả</th>
            <th style="width: 25%;">Chuyên mục</th>
            <th style="width: 10%;">Thẻ</th>
            <th style="width: 10%;">Trạng thái</th>
            <th style="width: 20%;">Ngày đăng</th>
        </tr>
    </thead>
    <tbody>
        @if (posts != null && posts.Any())
        {
            @foreach (var post in posts)
            {
                <tr class="post-row">
                    <td>@post.Id</td>
                    <td>
                        @post.Title
                        <br />
                        <div class="action-buttons">
                            <a href="javascript:void(0);" @onclick="() => EditPost(post.Id)" style="margin-right: 10px;">Chỉnh sửa</a> |
                            <a href="javascript:void(0);" class="status-danger" @onclick="() => DeletePost(post.Id)">Xóa</a>
                        </div>
                    </td>
                    <td>@post.AuthorId</td>
                    <td>@(post.Post_categories)</td>
                    <td>@(post.Tags != null && post.Tags.Any() ? string.Join(", ", post.Tags.Select(t => t.Title)) : "Không có thẻ")</td>
                    <td>
                        @if (post.Status == "Công khai")
                        {
                            <span class="status-public">@post.Status</span>
                        }
                        else if (post.Status == "Không công khai")
                        {
                            <span class="status-unpublished">@post.Status</span>
                        }
                        else
                        {
                            <span>@post.Status</span>
                        }
                    </td>
                    <td>@post.Post_date</td>
                </tr>
            }

        }
    </tbody>
</table>

@code {
    private List<Posts> posts;
    private string searchKeyword = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadPosts();
    }

    private async Task LoadPosts()
    {
        posts = await PostService.GetAll();
    }

    private void CreatePost()
    {
        Navigation.NavigateTo("/posts/create");
    }

    private void EditPost(long id)
    {
        Navigation.NavigateTo($"/posts/edit/{id}");
    }

    private async Task DeletePost(long id)
    {
        var confirm = await JS.InvokeAsync<bool>("confirm", "Chắc muốn xóa bài viết này?");
        if (confirm)
        {
            await PostService.Delete(id);
            await LoadPosts();
        }
    }

    private async Task SearchPosts()
    {
        if (!string.IsNullOrWhiteSpace(searchKeyword))
        {
            posts = await PostService.SearchPosts(searchKeyword);
        }
        else
        {
            await LoadPosts(); // Nếu không nhập từ khóa, tải lại toàn bộ bài viết
        }
    }
}


<style>
    .action-buttons {
        display: none;
    }

    .post-row:hover .action-buttons {
        display: inline;
    }

    table th, table td {
        white-space: nowrap;
        text-overflow: ellipsis;
        overflow: hidden;
    }

    .status-public {
        color: green; /* "Công khai" */
    }

    .status-unpublished {
        color: red; /* "Không công khai" */
    }

    .status-inactive {
        1 color: gray; /* "Không hoạt động" */
    }

    .status-danger {
        color: red;
    }
</style>
