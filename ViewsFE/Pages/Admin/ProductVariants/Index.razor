    private async Task OnSearch()
    {
        product_Varians_list = await productVariansService.GetAllProductVarians();

        if (string.IsNullOrWhiteSpace(search_query))
        {
            return;
        }

        product_Varians_list = product_Varians_list.Where(post =>
        {
            switch (searchFilter)
            {
                case "product_name":
                    return post.Posts.Title.Contains(search_query, StringComparison.OrdinalIgnoreCase);
                case "textile_technology":
                    return TextileTechnology_list.Any(t => t.Id == post.Textile_technology_id &&
                                                            t.Title.Contains(search_query, StringComparison.OrdinalIgnoreCase));
                case "material":
                    return Material_list.Any(m => m.Id == post.Material_id &&
                                                  m.Title.Contains(search_query, StringComparison.OrdinalIgnoreCase));
                case "style":
                    return Style_list.Any(s => s.Id == post.Style_id &&
                                               s.Title.Contains(search_query, StringComparison.OrdinalIgnoreCase));
                default:
                    return false;
            }
        }).ToList();
        StateHasChanged();
    }


